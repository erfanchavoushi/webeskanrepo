<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".Logonـtypeـselection">



    <androidx.cardview.widget.CardView
        android:id="@+id/cview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@color/cardview_light_background"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:id="@+id/contaner2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="ورود به عنوان مدیر"
                android:textColor="#1B1A1A"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ru.katso.livebutton.LiveButton
                android:id="@+id/btn_Loginـwithـnumber"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:background="@color/colorPrimaryDark"
                android:text="ورود با شماره موبایل"
                style="@style/Button_style_text"
                app:backgroundColor="#2D9385"
                app:corners="10dp"
                app:normalHeight="6dp"
                app:pressedHeight="2dp"
                app:shadowColor="#18443E" />

            <ru.katso.livebutton.LiveButton
                android:id="@+id/btn_login_with_name"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp"
                android:text="ورود با نام کاربری"
                style="@style/Button_style_text"
                app:backgroundColor="#2D9385"
                app:corners="10dp"
                app:normalHeight="6dp"
                app:pressedHeight="2dp"
                app:shadowColor="#18443E" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>